page {
  height: 100%;
}
.news {
  height: 100%;
  padding: 10rpx 0;
}
.news .news_item {
  width: 88%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: nowrap;
          flex-wrap: nowrap;
  padding: 20rpx;
  border-bottom: 1rpx solid #aaa;
  margin: 0 auto;
}
.news .news_item .img {
  width: 200rpx;
  height: 150rpx;
  margin-right: 20rpx;
}
.news .news_item .content {
  padding: 12rpx 0;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.news .news_item .content .title {
  font-size: 30rpx;
}
.news .news_item .content .news_msg {
  font-size: 26rpx;
  color: #aaa;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.loading_tips {
  margin: 50rpx 0 0;
  padding-bottom: 60rpx;
  color: #B50E03;
  text-align: center;
  font-size: 30rpx;
  letter-spacing: 10rpx;
  font-weight: bold;
}


page {
  height: 100%;
}
.pics {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.pics .imgs_nav {
  width: 200rpx;
  height: 100%;
  font-size: 32rpx;
  text-align: center;
  border-right: 1px solid #ccc;
  background-color: #F8F8F8;
}
.pics .imgs_nav .item {
  padding: 60rpx 20rpx;
  border-bottom: 1px solid #ccc;
}
.pics .imgs_nav .current {
  background-color: #B50E03;
  color: #fff;
}
.pics .content {
  padding-top: 20rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.pics .content .content_item {
  text-align: center;
  margin: 50rpx 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #aaa;
}
.pics .content .content_item .title {
  width: 66%;
  overflow: hidden;
  margin: 10rpx auto;
  font-size: 32rpx;
}
.pics .content .content_item .img {
  width: 90%;
}
.pics .content .content_item .decription {
  width: 100%;
  font-size: 30rpx;
  color: #aaa;
}

